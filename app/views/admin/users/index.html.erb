<h2 class="administrator">Administrator</h2>
<h1>ユーザ一覧</h1>

<div class="panel panel-default container show-table">
  <table class="table">
    <thead>
      <tr>
        <th>管理者権限</th>
        <th>ID</th>
        <th>名前</th>
        <th>アドレス</th>
        <th>所持タスク数</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <% if user.admin? %>
            <td>Administrator</td>
          <% else %>
            <td>Common</td>
          <% end %>
          <td><%= user.id %></td>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td><%= user.tasks.length %></td>
          <td class="btn-td"><%= link_to '', admin_user_path(user), :class =>"glyphicon glyphicon-folder-open btn btn-success" %></td>
          <td class="btn-td"><%= link_to '', edit_admin_user_path(user), :class =>"glyphicon glyphicon-pencil btn btn-warning" %></td>
          <td class="btn-td"><%= link_to '', admin_user_path(user), method: :delete, :class =>"glyphicon glyphicon-trash btn btn-danger" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<%= link_to '新規登録', new_admin_user_path, :class =>"btn btn-primary" %>
