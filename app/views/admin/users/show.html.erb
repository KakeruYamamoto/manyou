<h2 class="administrator">Administrator</h2>
<h1>ユーザ詳細</h1>
<p>
  <strong>Name:</strong>
  <%= @user.name %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<p>
  <strong>Admin:</strong>
  <%= @user.admin %>
</p>

<%= link_to '編集', edit_admin_user_path(@user), :class =>"btn btn-info" %> |
<%= link_to '一覧', admin_users_path, :class =>"btn btn-info" %>

<h3>所持タスク一覧</h3>

<div class="panel panel-default container show-table">
  <table class="table">
    <thead>
      <tr>
        <th>タスク名</th>
        <th>タスク内容</th>
        <th>終了期限</th>
        <th>状態</th>
        <th>優先順位</th>
        <th>詳細</th>
        <th>編集</th>
        <th>削除</th>
      </tr>
    </thead>

    <tbody>
      <% @user.tasks.each do |task| %>
          <tr>
            <td><%= task.title %></td>
            <td><%= task.content %></td>
            <td><%= task.deadline.strftime(("%Y年%m月%d日 %H時%M分")) %></td>
            <td><%= task.status %></td>
            <td><%= task.priority %></td>
            <td class="btn-td"><%= link_to '', task, :class =>"glyphicon glyphicon-folder-open btn btn-success" %></td>
            <td class="btn-td"><%= link_to '', edit_task_path(task), :class =>"glyphicon glyphicon-pencil btn btn-warning" %></td>
            <td class="btn-td"><%= link_to '', task, method: :delete, :class =>"glyphicon glyphicon-trash btn btn-danger" %></td>
          </tr>
      <% end %>
    </tbody>
  </table>