<h1>ユーザ一覧</h1>
<div class="panel panel-default container show-table">
  <table class="table">
    <thead>
      <tr>
        <th>名前</th>
        <th>アドレス</th>
        <th>所持タスク数</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td><%= user.tasks.length %></td>
          <td class="btn-td"><%= link_to '', user, :class =>"glyphicon glyphicon-folder-open btn btn-success" %></td>
          <td class="btn-td"><%= link_to '', edit_user_path(user), :class =>"glyphicon glyphicon-pencil btn btn-warning" %></td>
          <td class="btn-td"><%= link_to '', user, method: :delete, :class =>"glyphicon glyphicon-trash btn btn-danger" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
