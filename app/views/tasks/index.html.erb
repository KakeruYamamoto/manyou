<h1>タスク一覧</h1>

<%= form_with(model: Task.new, method: :get, url: tasks_path, local: true) do |f| %>
  <%= f.label :title, "タイトル検索"%>
  <%= f.text_field :title, value: (params[:task][:title] if params[:task]) %>

  <%= f.label :title_search, "状態検索"%>
  <%= f.select :status, ["","未着手","着手中","完了"] %>

  <%= f.hidden_field :search, value: 'true' %>

  <%= f.submit '絞り込む'%>
<% end %>

<%= link_to "終了期限でソート", tasks_path(sort_expired: "true") %>
<table>
  <thead>
    <tr>
      <th>タスク名</th>
      <th>タスク内容</th>
      <th>終了期限</th>
      <th>状態</th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.content %></td>
        <td><%= task.deadline.strftime(("%Y年%m月%d日 %H時%M分")) %></td>
        <td><%= task.status %></td>
        <td><%= link_to '詳細', task %></td>
        <td><%= link_to '編集', edit_task_path(task) %></td>
        <td><%= link_to '削除', task, method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '新規作成', new_task_path %>