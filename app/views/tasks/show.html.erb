<h1>タスク詳細</h1>

<p>
  <strong>タスク名：</strong>
  <%= @task.title %>
</p>

<p>
  <strong>タスク内容：</strong>
  <%= @task.content %>
</p>

<p>
  <strong>ラベル：</strong>
  <% @task.labels.each do |l| %>
    <%= "#{l.name} | " %>
  <% end %>
</p>

<%= link_to '編集', edit_task_path(@task), :class =>"btn btn-info" %> |
<%= link_to '一覧', tasks_path, :class =>"btn btn-info" %>
